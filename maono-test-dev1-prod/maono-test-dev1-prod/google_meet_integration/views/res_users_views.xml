<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Generate token Button and fields for Access token
    and Refresh token in User Preferences Page -->
    <record model="ir.ui.view" id="get_token_form">
        <field name="name">user form: add google meet token</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences_page']" position="inside">
                <notebook>
                <page string="Google Meet">
                    <separator name="configuration"
                               string="Google Meet Configuration"/>
                    <notebook>
                        <page name="credentials" string="Credentials">
                            <group>
                                <button string="Authenticate" type="object"
                                        name="google_meet_authenticate"
                                        class="oe_highlight"
                                        />
                                <button string="Refresh Token" type="object"
                                        name="google_meet_refresh_token"
                                        class="oe_highlight"/>
                            </group>
                        </page>
                        <page name="authentication" string="Authentication">
                            <group>
                                        <field name="google_access_token"/>
                                    <field name="google_access_token_expiration"/>
                                        <field name="google_refresh_token"/>
                                    <field name="is_authenticated_google"/>
                            </group>
                        </page>
                    </notebook>
                </page>
                </notebook>
