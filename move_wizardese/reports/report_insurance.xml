<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Format de papier paysage avec DPI augment√© -->
    <record id="paperformat_landscape_invoice" model="report.paperformat">
        <field name="name">A4 Portrait(Factures)</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_spacing">10</field>
        <field name="dpi">120</field>
    </record>

    <!-- Action de rapport -->
    <record id="report_account_move_insurance_wizard" model="ir.actions.report">
        <field name="name">Rapport Factures Patients</field>
        <field name="model">account.move.insurance.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">move_wizardese.report_account_move_insurance_wizard_view</field>
        <field name="report_file">move_wizardese.report_account_move_insurance_wizard</field>
        <field name="print_report_name">'Rapport Factures Patients'</field>
        <field name="binding_model_id" ref="model_account_move_insurance_wizard"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_landscape_invoice"/>
    </record>

    <!-- Template du rapport -->
    <template id="report_account_move_insurance_wizard_view">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0]"/>
            <t t-set="total_amount" t-value="context.get('total_amount', 0)"/>

            <main>
                <div class="page">
                    <h2 style="text-align:center; margin-bottom: 20px; font-size: 22px;">üßæ Rapport Factures Patients</h2>

                    <!-- Filtres appliqu√©s -->
                    <table class="table table-sm" style="width:100%; margin-bottom: 25px; font-size: 14px;">
                        <tbody>
                            <tr>
                                <td><strong>Assurances :</strong></td>
                                <td>
                                    <t t-if="doc.insurance_ids">
                                        <t t-esc="', '.join([ins.name for ins in doc.insurance_ids])"/>
                                    </t>
                                    <t t-else="">Toutes les assurances</t>
                                </td>
                                <td><strong>Societ√©s :</strong></td>
                                <td>
                                    <t t-if="doc.societe_ids">
                                        <t t-esc="', '.join([soc.name for soc in doc.societe_ids])"/>
                                    </t>
                                    <t t-else="">Toutes les soci√©t√©s</t>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>P√©riode :</strong></td>
                                <td colspan="3">
                                    <t t-if="doc.date_from or doc.date_to">
                                        Du <span t-field="doc.date_from" t-options='{"widget": "date"}'/> 
                                        au <span t-field="doc.date_to" t-options='{"widget": "date"}'/>
                                    </t>
                                    <t t-else="">Toutes les dates</t>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Date de g√©n√©ration :</strong></td>
                                <td colspan="3">
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div style="margin-bottom: 20px; font-size: 14px; text-align: center;">
                        <p>
                            La Clinique BIASA envoie ses compliments a <t t-if="doc.societe_ids"><t t-esc="', '.join([soc.name for soc in doc.societe_ids])"/></t>
                            et lui adresse selon l'usage, le releve de ses honoraires dont le montant s'eleve a la somme de 
                            <strong><t t-esc="sum(doc.move_ids.mapped('amount_total'))"/>
                            </strong> Francs CFA correspondant aux frais des prestations de 
                            <t t-if="doc.date_from and doc.date_to">
                                <span t-field="doc.date_from" t-options='{"widget": "date"}'/> au <span t-field="doc.date_to" t-options='{"widget": "date"}'/>
                            </t>
                            <t t-else="">la periode selectionnee</t> :
                        </p>
                    </div>

                    <!-- Tableau de factures -->
                    <table class="table table-condensed" style="width:100%; border-collapse: collapse; font-size: 14px;" border="1">
                        <thead style="background-color: #f0f0f0;">
                            <tr>
                                <th>Facture</th>
                                <th>Patient</th>
                                <th>Assurance</th>
                                <th>Date</th>
                                <th>Produits</th>
                                <th>Total</th>
                                <th>Total Assurance</th>
                                <th>Total Patient</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.move_ids" t-as="move">
                                <tr>
                                    <td><t t-esc="move.name"/></td>
                                    <td><t t-esc="move.partner_id.name"/></td>
                                    <td><t t-esc="move.insurance_company_id.name or 'Aucune'"/></td>
                                    <td><span t-field="move.invoice_date" t-options='{"widget": "date"}'/></td>
                                    <td>
                                        <table border="1" style="width:100%; font-size: 12px; border-collapse: collapse; margin: 5px 0;">
                                            <thead style="background-color: #e0e0e0;">
                                                <tr>
                                                    <th>Produit</th>
                                                    <th>Qt√©</th>
                                                    <th>PU</th>
                                                    <th>Sous-total</th>
                                                    <th>Part patient</th>
                                                    <th>Part assurance </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="move.invoice_line_ids" t-as="line">
                                                    <tr>
                                                        <td><t t-esc="line.product_id.name"/></td>
                                                        <td class="text-right"><t t-esc="line.quantity"/></td>
                                                        <td class="text-right"><t t-esc="line.price_unit"/></td>
                                                        <td class="text-right"><t t-esc="line.price_subtotal"/></td>
                                                        <td class="text-right"><t t-esc="line.x_studio_montant_paye_patient"/></td>
                                                        <td class="text-right"><t t-esc="line.x_studio_montant_assurance"/></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </td>
                                    <td class="text-right"><strong><t t-esc="move.amount_total"/> F CFA</strong></td>
                                    <td class="text-right"><strong><t t-esc="move.x_studio_total_assurance"/> F CFA</strong></td>
                                    <td class="text-right"><strong><t t-esc="move.x_studio_total_montant_paye_patient"/> F CFA</strong></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <p class="text-right" style="margin-top: 20px; font-size: 16px;">
                        <strong>Total g√©n√©ral :</strong> <t t-esc="sum(doc.move_ids.mapped('amount_total'))"/> F CFA
                    </p>
                </div>
            </main>
        </t>
    </template>
</odoo>
