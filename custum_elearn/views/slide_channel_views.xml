<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View slide.channel form -->
    <record id="view_slide_channel_form" model="ir.ui.view">
        <field name="name">slide.channel.view.form</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="replace">
                <group>
                    <group string="Sessions">
                        <field name="session_id">
                            <tree>
                                <field name="days_of_week" widget="many2many_tags"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="days_of_week" widget="many2many_tags"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>