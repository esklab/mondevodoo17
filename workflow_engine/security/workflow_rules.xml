<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Règle: Accès à ses propres enregistrements pour le demandeur -->
        <record id="workflow_rule_own_records" model="ir.rule">
            <field name="name">Accès restreint aux propres enregistrements</field>
            <field name="model_id" ref="model_workflow_trash"/>
            <field name="groups" eval="[(4, ref('group_workflow_user'))]"/>
            <field name="domain_force">[('requested_by', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Les validateurs peuvent voir et modifier les demandes à valider -->
        <record id="workflow_rule_validators" model="ir.rule">
            <field name="name">Accès pour les validateurs</field>
            <field name="model_id" ref="model_workflow_trash"/>
            <field name="groups" eval="[(4, ref('group_workflow_manager'))]"/>
            <field name="domain_force">[]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Historique des validations accessible aux managers -->
        <record id="workflow_rule_history_access" model="ir.rule">
            <field name="name">Accès à l'historique des validations</field>
            <field name="model_id" ref="model_workflow_history"/>
            <field name="groups" eval="[(4, ref('group_workflow_manager'))]"/>
            <field name="domain_force">[]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Administrateurs ont un accès total -->
        <record id="workflow_rule_admin_full_access" model="ir.rule">
            <field name="name">Accès complet pour les administrateurs</field>
            <field name="model_id" ref="model_workflow_model"/>
            <field name="groups" eval="[(4, ref('group_workflow_admin'))]"/>
            <field name="domain_force">[]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>

