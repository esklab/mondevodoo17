<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_workflow_transition_form" model="ir.ui.view">
        <field name="name">workflow.transition.form</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <form string="Transition de Workflow">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="workflow_id"/>
                        <field name="from_state"/>
                        <field name="to_state"/>
                        <field name="allowed_groups"/>
                    </group>
                    <group>
                        <field name="condition"/>
                        <field name="send_notification"/>
                        <field name="send_email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_transition_tree" model="ir.ui.view">
        <field name="name">workflow.transition.tree</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="workflow_id"/>
                <field name="from_state"/>
                <field name="to_state"/>
                <field name="allowed_groups"/>
                <field name="send_notification"/>
                <field name="send_email"/>
            </tree>
        </field>
    </record>

    <!-- Action pour Workflow Transition -->
    <record id="action_workflow_transition" model="ir.actions.act_window">
        <field name="name">Transitions de Workflow</field>
        <field name="res_model">workflow.transition</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
