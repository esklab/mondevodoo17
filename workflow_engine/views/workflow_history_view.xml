<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_workflow_history_tree" model="ir.ui.view">
        <field name="name">workflow.history.tree</field>
        <field name="model">workflow.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="validated_on"/>
                <field name="old_state"/>
                <field name="new_state"/>
                <field name="validated_by"/>
            </tree>
        </field>
    </record>

    <record id="view_workflow_history_form" model="ir.ui.view">
        <field name="name">workflow.history.form</field>
        <field name="model">workflow.history</field>
        <field name="arch" type="xml">
            <form string="Historique des Validations">
                <sheet>
                    <group>
                        <field name="validated_on"/>
                        <field name="old_state"/>
                        <field name="new_state"/>
                        <field name="validated_by"/>
                    </group>
                    <group>
                        <field name="transition_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour Workflow History -->
    <record id="action_workflow_history" model="ir.actions.act_window">
        <field name="name">Historique des Validations</field>
        <field name="res_model">workflow.history</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
