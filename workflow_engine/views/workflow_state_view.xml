<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_workflow_state_form" model="ir.ui.view">
        <field name="name">workflow.state.form</field>
        <field name="model">workflow.state</field>
        <field name="arch" type="xml">
            <form string="État de Workflow">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence"/>
                        <field name="is_initial"/>
                        <field name="is_final"/>
                    </group>
                    <group>
                        <field name="workflow_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_state_tree" model="ir.ui.view">
        <field name="name">workflow.state.tree</field>
        <field name="model">workflow.state</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
                <field name="is_initial"/>
                <field name="is_final"/>
            </tree>
        </field>
    </record>

    <!-- Action pour Workflow State -->
    <record id="action_workflow_state" model="ir.actions.act_window">
        <field name="name">États de Workflow</field>
        <field name="res_model">workflow.state</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
