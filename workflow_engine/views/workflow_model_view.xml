<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_workflow_model_form" model="ir.ui.view">
            <field name="name">workflow.model.form</field>
            <field name="model">workflow.model</field>
            <field name="arch" type="xml">
                <form string="Workflow">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="model_id"/>
                            <field name="state_field"/>
                        </group>
                        <notebook>
                            <page string="Ã‰tats">
                                <field name="states" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="sequence"/>
                                        <field name="is_initial"/>
                                        <field name="is_final"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Transitions">
                                <field name="transitions" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="from_state"/>
                                        <field name="to_state"/>
                                        <field name="allowed_groups"/>
                                        <field name="send_notification"/>
                                        <field name="send_email"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_workflow_model_tree" model="ir.ui.view">
            <field name="name">workflow.model.tree</field>
            <field name="model">workflow.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="state_field"/>
                </tree>
            </field>
        </record>

        <!-- Action pour Workflow Model -->
        <record id="action_workflow_model" model="ir.actions.act_window">
            <field name="name">Workflows</field>
            <field name="res_model">workflow.model</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>