<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_freight_operation_form_approval">
        <field name="name">freight.operation.form.approval</field>
        <field name="model">freight.operation</field>
        <field name="inherit_id" ref="freight.view_freight_operation_form"/>
        <field name="arch" type="xml">
            <!-- Déclaration des champs calculés -->
            <xpath expr="//field[@name='incoterm']" position="after">
                <field name="delivery_mode"/>
                <field name="insurance_transport"/>
                <field name="insurance_policy" invisible="not insurance_transport"/>    
                <field name="are_required_fields_filled" invisible="1"/>
                <field name="missing_fields" invisible="1"/>   
                <field name="project_id" invisible="1"/>
            </xpath>

            <!-- Boutons d'approbation -->
            <xpath expr="//header" position="inside">
                <div groups="custom_freight.group_freight_approver">
                    <!-- Bouton Demande Infos -->
                    <button name="action_request_info"
                            string="Demande d'informations"
                            type="object"
                            class="oe_highlight me-2"
                            invisible="are_required_fields_filled or not missing_fields"/>
                    
                    <!-- Bouton Demande Approbation -->
                    <button name="action_request_approval"
                            string="Demander Approbation"
                            type="object"
                            class="oe_highlight me-2"
                            invisible="not are_required_fields_filled or stage_id != 31 and stage_id in [32, 33]"/>
                    
                    <!-- Bouton Approuver -->
                    <button name="action_approve" 
                            string="Approuver"
                            type="object"
                            class="oe_highlight me-2"
                            invisible="not are_required_fields_filled or stage_id != 31"/>
            
                    <!-- Bouton Rejeter -->
                    <button name="action_reject" 
                            string="Rejeter"
                            type="object"
                            class="oe_danger me-2"
                            invisible="not are_required_fields_filled or stage_id != 31"/>
                </div>            
                
                <!-- Alerte champs manquants -->
                <div class="alert alert-warning" invisible="are_required_fields_filled or not missing_fields">
                    <h4>Champs obligatoires manquants :</h4>
                    <field name="missing_fields" widget="pre"/>
                </div>    
            </xpath>
        
            <!-- Page motif de rejet -->
            <xpath expr="//notebook" position="inside">
                <page string="Motif du rejet">
                    <group>
                        <field name="rejection_reason" placeholder="Saisissez le motif de rejet..."/>
                    </group>
                </page>
            </xpath>

            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button name="action_open_project" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-tasks"
                        invisible = "project_id == False">
                    <field name="pending_task_count" widget="statinfo" string="En attente"/>
                </button>
                <button name="action_generate_tasks" 
                        type="object" 
                        class="oe_highlight"
                        invisible = "project_id == False"
                        string="Générer Tâches"/>
            </xpath>
    
        <!-- Ajout de l'onglet Tâches -->
        <xpath expr="//sheet/notebook" position="inside">
            <page string="Tâches" invisible = "project_id == False">
                <field name="task_ids" mode="kanban,tree,form">
                    <kanban>
                        <field name="stage_id"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_global_click">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                    <div>
                                        <field name="user_ids" widget="many2one_avatar"/>
                                    </div>
                                    <div>
                                        <field name="stage_id"/>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                    <tree>
                        <field name="name"/>
                        <field name="user_ids"/>
                        <field name="stage_id"/>
                        <field name="date_deadline"/>
                    </tree>
                    <form>
                        <group>
                            <field name="name"/>
                            <field name="user_ids"/>
                            <field name="stage_id"/>
                            <field name="date_deadline"/>
                            <field name="description" widget="html"/>
                        </group>
                    </form>
                </field>
            </page>
        </xpath>

        </field>
    </record>
</odoo>