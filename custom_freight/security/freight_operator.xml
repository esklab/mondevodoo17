<odoo>
    <!-- 1. Création du groupe approbateur -->
    <record id="group_freight_approver" model="res.groups">
        <field name="name">Freight Approver</field>
        <field name="category_id" ref="base.module_category_freight"/>  <!-- Référence exacte confirmée -->
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- 2. Règle de sécurité pour l'approbation -->
    <record id="freight_operation_approver_rule" model="ir.rule">
        <field name="name">Freight Operation Approver Rule</field>
        <field name="model_id" ref="model_freight_operation"/>  <!-- ID 758 confirmé -->
        <field name="groups" eval="[(4, ref('group_freight_approver'))]"/>
        <!-- <field name="domain_force">[('stage_id.name','=','En attente')]</field> -->
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>