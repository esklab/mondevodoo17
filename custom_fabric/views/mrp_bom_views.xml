<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
<record id="view_mrp_bom_form_custom" model="ir.ui.view">
    <field name="name">mrp.bom.form.custom</field>
    <field name="model">mrp.bom</field>
    <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="after">
            <group string="Optimisation des Pertes">
                <field name="waste_material" readonly="1"/>
                <field name="suggested_products" widget="many2many_tags"/>
            </group>
        </xpath>
    </field>
</record>

</odoo>