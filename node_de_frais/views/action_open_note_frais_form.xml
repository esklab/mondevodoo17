        <field name="name">Ajout de note de frais</field>
        <field name="res_model">gestion_notes_frais.note_frais</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="target">inline</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Ajouter une nouvelle note de frais
                </p>
            </field>
