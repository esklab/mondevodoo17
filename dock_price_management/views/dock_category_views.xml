<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire -->
    <record id="view_dock_category_form" model="ir.ui.view">
        <field name="name">dock.category.form</field>
        <field name="model">dock.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom de la catégorie"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="order_universe_id" />
                            <field name="type" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Articles associés">
                            <field name="product_ids"/>
                        </page>
                        <page string="Prix d'acconage">
                            <field name="dock_price_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="view_dock_category_tree" model="ir.ui.view">
        <field name="name">dock.category.tree</field>
        <field name="model">dock.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="order_universe_id" />
                <field name="type" />
                <field name="product_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_dock_category_search" model="ir.ui.view">
        <field name="name">dock.category.search</field>
        <field name="model">dock.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="product_ids"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dock_category" model="ir.actions.act_window">
        <field name="name">Catégories Acconage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dock.category</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_dock_category_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première catégorie d'acconage !
            </p>
        </field>
    </record>
</odoo>