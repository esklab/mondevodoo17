<odoo>
    <record id="view_order_universe_tree" model="ir.ui.view">
        <field name="name">order.universe.tree</field>
        <field name="model">order.universe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="category_ids"/>
            </tree>
        </field>
    </record>

    <record id="view_order_universe_form" model="ir.ui.view">
        <field name="name">order.universe.form</field>
        <field name="model">order.universe</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                        <field name="category_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_order_universe" model="ir.actions.act_window">
        <field name="name">Univers de Commandes</field>
        <field name="res_model">order.universe</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_order_universe_root"
              name="Configuration Univers"
              parent="dock_price_management.menu_dock_price_root"
              action="action_order_universe"
              sequence="20"/>
</odoo>