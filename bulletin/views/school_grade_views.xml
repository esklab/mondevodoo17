<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View school.note View Tree -->
    <record id="view_school_note_tree" model="ir.ui.view">
        <field name="name">view.school.note.tree</field>
        <field name="model">school.note</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="score"/>
            </tree>
        </field>
    </record>

    <!-- View school.note form -->
    <record id="view_school_note_form" model="ir.ui.view">
        <field name="name">view.school.note.form</field>
        <field name="model">school.note</field>
        <field name="arch" type="xml">
            <form string="School note">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="score"/>        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action school.note -->
    <record id="action_school_note" model="ir.actions.act_window">
        <field name="name">School note</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.note</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
    id="student_school_menu"
    name="Bulletin "
    sequence="100"/>

    <menuitem
        id="school_note_menu"
        name="School note"
        action="action_school_note"
        parent="student_school_menu"
        sequence="100"
    />
</odoo>
